{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Everything",
      "detail": "build html and epub",
      "dependsOn": [
        "Build html",
        "Build ebook"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "Build html",
      "detail": "Creates a website in _build",
      "type": "process",
      "windows": {
        "command": "${workspaceFolder}/.venv/Scripts/sphinx-build.exe"
      },
      "command": "${workspaceFolder}/.venv/Scripts/sphinx-build",
      "args": [
        "-avTEW",
        "-b",
        "html",
        "${workspaceFolder}",
        "${workspaceFolder}/_build/html"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "group": "build"
      }
    },
    {
      "label": "Build ebook",
      "detail": "Outputs an epub file into _build",
      "type": "process",
      "windows": {
        "command": "${workspaceFolder}/.venv/Scripts/sphinx-build.exe"
      },
      "command": "${workspaceFolder}/.venv/Scripts/sphinx-build",
      "args": [
        "-avTEW",
        "-b",
        "epub",
        "${workspaceFolder}",
        "${workspaceFolder}/_build/epub"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "group": "build"
      }
    },
    {
      "label": "Clean",
      "detail": "Clean up the _build directory",
      "type": "process",
      "windows": {
        "command": "${workspaceFolder}/.venv/Scripts/sphinx-build.exe"
      },
      "command": "${workspaceFolder}/.venv/Scripts/sphinx-build",
      "args": [
        "-M",
        "clean",
        "${workspaceFolder}",
        "${workspaceFolder}/_build"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "none",
        "isDefault": false
      },
      "presentation": {
        "group": "clean"
      }
    }
  ]
}